<p id="notice"><%= notice %></p>
<div class="second_layer_menu"><%= render :partial => "layouts/second_layer_menu" %></div>
<div class="main">
  <h1>Articles</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Favicon</th>
        <th>description</th>
        <th>Image</th>
        <th>Check</th>
        <th>Comment</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <% article.url_contents.each do |url_content| %>
            <td><%= url_content.title %></td>
            <td><%= url_content.description %></td>
            <td><%= image_tag  "#{url_content.image}", class: "article_image" %></td>
          <% end %>
          <td><%= article.check %></td>
          <td><%= article.comment %></td>
          <td><%= link_to 'Show', article %></td>
          <td><%= link_to 'Edit', edit_article_path(article) %></td>
          <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Article', new_article_path %>
</div>