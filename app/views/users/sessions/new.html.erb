<div class="login">
  <h1>Log in</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <% if @line_link_token %>
      <%= f.hidden_field :line_link_token, value: @line_link_token %>
  <% end %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "password" %>
    </div>

    <div class="actions m_t_30">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

  <div class="login_help m_t_25"><%= render "users/shared/links" %></div>
</div>